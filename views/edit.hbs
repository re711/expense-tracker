<div class="container mt-3 d-flex flex-nowrap flex-column align-items-center"">
  <h1 class="mb-3">輸入支出</h1>
  <form action="/records/{{ record._id }}/edit" method="POST">
    <div class="form-group row mb-4">
      <div class="input-group-append">
        <label class="col-3 col-form-label">名稱</label>
        <div class="col-10">
          <input class="form-control" type="text" id="example-text-input" name="name" value="{{ record.name }}" required>
        </div>
      </div>
    </div>

    <div class="form-group row mb-4">
      <div class="input-group-append">
        <label class="col-3 col-form-label">日期</label>
        <div class="col-10">
          <input class="form-control" type="date" id="example-text-input" name="date" value="{{ record.date }}" required>
        </div>
      </div>
    </div>

    <div class="form-group row mb-4">
      <div class="input-group-append">
        <label class="col-4 col-form-label">類別</label>
        <div class="col-10">
          <select class="form-control" name="category" value="{{ record.category }}" required>
            <option value="{{ record.category }}" disabled selected>類別</option>
            <option {{#categoryIcon record.category '家居物業'}} selected {{/categoryIcon}} value="家居物業">家居物業</option>
            <option {{#categoryIcon record.category '交通出行'}} selected {{/categoryIcon}} value="交通出行">交通出行</option>
            <option {{#categoryIcon record.category '休閒娛樂'}} selected {{/categoryIcon}} value="休閒娛樂">休閒娛樂</option>
            <option {{#categoryIcon record.category '餐飲食品'}} selected {{/categoryIcon}} value="餐飲食品">餐飲食品</option>
            <option {{#categoryIcon record.category '其他'}} selected {{/categoryIcon}} value="其他">其他</option>
          </select>
        </div>
      </div>
    </div>

    <div class="form-group row mb-4">
      <div class="input-group-append">
        <label class="col-3 col-form-label">金額</label>
        <div class="col-10">
          <input class="form-control" type="text" id="example-text-input" name="amount" value="{{ record.amount }}" required>
        </div>
      </div>
    </div>

    <div class="form-group row mb-4" style="justify-content: center;">
      <div class="input-group-append mb-3">
        <div class="mt-3">
          <button class="btn btn-success" type="submit">修改</button>
        </div>
      </div>
    </div>
  </form>
</div>