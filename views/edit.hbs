<div class="container mx-auto" style="width: 500px;">
  <h1 class="text-center display-3 mb-4">修改支出</h1>
  <form action="/records/{{ record._id }}?_method=PUT" method="POST">
    <div class="form-group row mb-4">
      <label for="name" class="col-2 col-form-label">名稱</label>
      <div class="col-8">
        <input class="form-control" type="text" id="name" name="name" value="{{ record.name }}" required>
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="date" class="col-2 col-form-label">日期</label>
      <div class="col-8">
        <input class="form-control" type="date" id="date" name="date" value="{{ record.date }}" required>
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="category" class="col-2 col-form-label">類別</label>
      <div class="col-8">
        <select class="form-control" id="category" name="category" value="{{ record.category }}" required>
          <option value="{{ record.category }}" disabled selected>類別</option>
          <option {{#categoryIcon record.category '家居物業'}} selected {{/categoryIcon}} value="家居物業">家居物業</option>
          <option {{#categoryIcon record.category '交通出行'}} selected {{/categoryIcon}} value="交通出行">交通出行</option>
          <option {{#categoryIcon record.category '休閒娛樂'}} selected {{/categoryIcon}} value="休閒娛樂">休閒娛樂</option>
          <option {{#categoryIcon record.category '餐飲食品'}} selected {{/categoryIcon}} value="餐飲食品">餐飲食品</option>
          <option {{#categoryIcon record.category '其他'}} selected {{/categoryIcon}} value="其他">其他</option>
        </select>
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="amount" class="col-2 col-form-label">金額</label>
      <div class="col-8">
        <input class="form-control" type="number" id="amount" name="amount" min="0" value="{{ record.amount }}" required>
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="merchant" class="col-2 col-form-label">商家</label>
      <div class="col-8">
        <input class="form-control" type="text" id="merchant" name="merchant" required>
      </div>
    </div>

    <div class="form-group row mb-4">
      <label class="col-2 col-form-label"></label>
      <div class="col-8">
        <button class="form-control btn btn-success" type="submit">修改</button>
      </div>
    </div>
  </form>
</div>